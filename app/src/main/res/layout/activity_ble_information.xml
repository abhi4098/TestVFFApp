<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screens_background"
    android:orientation="vertical"
    tools:context=".ui.activities.ProjectDetailActivity">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="200sp"
                    android:layout_height="35sp"
                    android:background="@color/login_button_color"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/details_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Details"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/measurements"
                    android:layout_width="200sp"
                    android:layout_height="35sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/measurements_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Measurements"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pictures"
                    android:layout_width="200sp"
                    android:layout_height="35sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pictures_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Pictures"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_on_details_click"
                android:layout_width="match_parent"
                android:layout_height="350sp"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="15sp"
                android:background="@color/colorPrimary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"

                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/floor_number_cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:padding="20sp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardElevation="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/floor_number_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"

                                android:text="Floor Name - "
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp" />

                            <TextView

                                android:id="@+id/floor_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/login_button_color"
                                android:textSize="18sp" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/room_number_cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="30sp"
                        android:layout_toRightOf="@+id/floor_number_cardView"
                        android:padding="20sp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardElevation="5dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/room_number_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="Room Name - "
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp" />


                            <TextView

                                android:id="@+id/rooms_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/login_button_color"
                                android:textSize="18sp" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/main_layout"

                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".13"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/window" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:text="WINDOWS"
                                    android:textColor="@color/colorAccent" />


                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5sp"
                            android:layout_marginStart="5sp"
                            android:layout_weight=".7"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25sp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/left_arrow36"
                                android:tint="@color/colorPrimaryDark" />

                            <RelativeLayout
                                android:id="@+id/layout_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="45sp"
                                android:layout_marginStart="35sp">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"></android.support.v7.widget.RecyclerView>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow36"
                                android:tint="@color/colorPrimaryDark" />


                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/add_new_window_cardview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".17"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/login_button_color"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableTint="@color/white"
                                    android:drawableTop="@mipmap/add_button"
                                    android:text="ADD NEW WINDOW"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_on_measurement_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="15sp"
                android:background="@color/colorPrimary"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:visibility="gone"

                >

                <requestFocus />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal"

                    android:weightSum=".9">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Wall/WallWidth *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/wall_width"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"
                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Width Left of Window *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/width_left_of_window"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"
                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="IB Width of Window *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/ib_width_of_window"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"

                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"
                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"

                    android:weightSum=".9">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="IB Length of Window *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/ib_length_of_window"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"

                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"
                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Width Right of Window *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/width_right_of_window"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/rectangular_background"

                            android:fontFamily="sans-serif"
                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Length CEIL/FLR *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/length_of_ceil_floor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"

                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"
                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"

                    android:weightSum=".9">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Pocket Depth *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/pocket_depth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"

                            android:inputType="numberDecimal"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Carpet INST *"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/carpet_inst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/rectangular_background"
                            android:fontFamily="sans-serif"
                            android:paddingBottom="5sp"
                            android:paddingStart="10sp"
                            android:paddingTop="5sp"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!--<LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".3"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp"
                            android:layout_marginStart="20sp"
                            android:layout_marginEnd="20sp"
                            android:fontFamily="sans-serif"
                            android:text="Comment"/>

                        <EditText
                            android:id="@+id/additional_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:layout_marginTop="5sp"
                            android:paddingTop="5sp"
                            android:paddingBottom="5sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="20sp"
                            android:layout_marginEnd="20sp"
                            android:paddingStart="10sp"
                            android:background="@drawable/rectangular_background"
                            />
                    </LinearLayout>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="30sp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/save_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:backgroundTint="@color/login_button_color"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/preview_in_excel"
                        android:layout_width="wrap_content"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:backgroundTint="@color/forgot_password_color"
                        android:text="Preview Data in Excel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_on_pictures_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="15sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:visibility="gone"

                >


                <android.support.v7.widget.CardView
                    android:id="@+id/ceiling_to_floor"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:layout_margin="5sp"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/project_background_color_left"
                            app:cardElevation="5sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/ceiling_to_floor_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="100sp"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="Ceiling to Floor"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="20sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorPrimaryDark"></LinearLayout>


                                <TextView
                                    android:id="@+id/wall_to_wall_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="100sp"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="Wall to Wall"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="20sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorPrimaryDark"></LinearLayout>


                                <TextView
                                    android:id="@+id/windows_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="100sp"
                                    android:layout_gravity="center"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="Windows"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="20sp" />


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5sp"
                            android:layout_marginStart="5sp"
                            android:layout_weight=".7"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25sp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/left_arrow36"
                                android:tint="@color/colorPrimaryDark" />

                            <RelativeLayout
                                android:id="@+id/layout_horizontal_images"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="45sp"
                                android:layout_marginStart="35sp"
                                tools:ignore="TooManyViews">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view_images"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/project_background_color_left"
                                    android:gravity="center"></android.support.v7.widget.RecyclerView>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25sp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow36"
                                android:tint="@color/colorPrimaryDark" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".1"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/add_more_images"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/retake" />
                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>


            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="38sp"
                android:layout_gravity="center_horizontal"
                android:background="@color/forgot_password_color"
                android:fontFamily="sans-serif"
                android:paddingEnd="50sp"
                android:paddingStart="50sp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>