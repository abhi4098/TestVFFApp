<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="15sp"
    android:layout_height="120sp"
    android:layout_margin="5sp"
    android:id="@+id/main_layout"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/floor"/>

            <TextView
                android:id="@+id/floor_name"
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                />

            <Button
                android:textAllCaps="false"
                android:layout_marginTop="5sp"
                android:id="@+id/skip_floor_btn"
                android:layout_width="wrap_content"
                android:layout_height="23sp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:background="@color/forgot_password_color"
                android:text="Skip"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".73"
            android:gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/number_of_rooms"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
               >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_marginStart="30sp"
                  android:layout_marginEnd="30sp"
                  android:orientation="vertical">

                <TextView
                    android:id="@+id/number_of_rooms_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Of Rooms"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"/>


                  <RelativeLayout
                      android:layout_width="40sp"
                      android:layout_marginTop="10sp"
                      android:background="@drawable/circular_background_green"
                      android:layout_height="40sp">
                      <TextView

                          android:id="@+id/rooms_count"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:text="0"
                          android:textColor="@color/white"
                          android:textSize="16sp"
                          />
                  </RelativeLayout>


              </LinearLayout>



            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/number_of_rooms_completed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="45sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="30sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/number_of_rooms__completed_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number Of Rooms Completed"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>


                    <RelativeLayout
                        android:layout_width="40sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/circular_background_green"
                        android:layout_height="40sp">
                        <TextView

                            android:id="@+id/rooms_completed_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />
                    </RelativeLayout>


                </LinearLayout>



            </RelativeLayout>

            <android.support.v7.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                app:cardElevation="5dp"

                app:cardBackgroundColor="@color/colorPrimary"

                >

            <Button
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:id="@+id/select_button"
                android:layout_width="wrap_content"
                android:layout_height="32sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="5sp"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:text="Select Room"/>

            </android.support.v7.widget.CardView>



        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/add_room_cardview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".12"
            app:cardBackgroundColor="@color/login_button_color"
            app:cardElevation="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:drawableTop="@mipmap/add_button"
                    android:drawableTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="ADD ROOM"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>






    </LinearLayout>


</android.support.v7.widget.CardView>

</LinearLayout>